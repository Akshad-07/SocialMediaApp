<div class="container">
    <h1>Edit Post</h1>
    <form action="/editingPost/{{post._id}}?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Title</label>
            <input type="text" name="title" value="{{post.title}}" class="form-control" placeholder="Add title">
        </div>
        <div class="mb-3">
            <label for="body">Body</label>
            <textarea type="text" name="body" class="form-control"
                placeholder="Type something..">{{post.body}} </textarea>
        </div>
        <div class="mb-3">
            <label for="status">Status</label>
            <select name="status">
                <option value="public">Public</option>
                <option value="private">Private</option>
            </select>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" name="allowComments" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Allow Comment</label>
        </div>
        <button type="submit" class="btn btn-primary">SAVE</button>
    </form>
</div>